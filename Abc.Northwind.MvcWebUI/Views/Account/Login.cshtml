@using System.Threading.Tasks
@model Abc.Northwind.MvcWebUI.Models.LoginViewModel
@{
    ViewBag.Title = "title";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
    <div class="col-lg-6">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
            </div>
            <form class="user" asp-controller="Account" asp-action="Login" method="post" role="form">
                <div class="form-group">
                    <input asp-for="UserName" class="form-control form-control-user"
                           placeholder="Enter User Name...">
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" type="password" class="form-control form-control-user"
                           placeholder="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox small">
                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="customCheck">
                        <label class="custom-control-label" for="customCheck">
                            Remember
                            Me
                        </label>
                    </div>
                </div>
                <input type="submit" value="Login" class="btn btn-primary btn-user btn-block">

                <hr>
                
            </form>
            <hr>
            <div class="text-center">
                <a class="small" href="forgot-password.html">Forgot Password?</a>
            </div>
            <div class="text-center">
                <a class="small" asp-controller="Account" asp-action="Register">Create an Account!</a>
            </div>
        </div>
    </div>
</div>